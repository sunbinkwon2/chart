# ===============================
# Server
# ===============================
NODE_ENV=production
PORT=8080

# ===============================
# Application
# ===============================
APP_NAME=chart
APP_VERSION=1.0.0

# ===============================
# Logging
# ===============================
LOG_LEVEL=warn

# ===============================
# Chart Config
# ===============================
DEFAULT_CHART_TYPE=LINE
MAX_DATA_POINTS=1000

# ===============================
# Lightning JS
# ===============================
LIGHTNING_WIDTH=1920
LIGHTNING_HEIGHT=1080
LIGHTNING_FPS=60

# ===============================
# Database (PostgreSQL)
# ===============================
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chart_db
DB_USER=chart_user
DB_PASSWORD=chart_password
DB_SSL=false

# ===============================
# Nginx
# ===============================
NGINX_CONF=nginx.prod.conf
NGINX_PORT=8080