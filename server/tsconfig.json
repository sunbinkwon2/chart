{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "outDir": "dist",
    "sourceMap": true,

    "downlevelIteration": true,
    "noImplicitAny": false,

    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }

  },
  "include": ["src/**/*"]
}
