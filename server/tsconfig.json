{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,

    "downlevelIteration": true,
    "noImplicitAny": false,

    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
